
<% @students.each do |student| %>
    <p>First Name: <%= student.first_name %></p>
    <p>Last Name: <%= student.last_name %></p>
    <p>House: <%= @houses[0].name %></p>
    <p>Age: <%= student.age %></p>
    <a href="/students/<%= student.id %>">Details</a>
    <hr/>
<% end %>

